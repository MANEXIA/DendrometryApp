<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkgreencolor"
        android:orientation="vertical">

        <Button
            android:id="@+id/hBtn"
            android:layout_width="159dp"
            android:layout_height="53dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_backgroud"
            android:fontFamily="@font/bree_serif"
            android:text="@string/start"
            android:textAllCaps="false"
            android:textColor="#BDBE86"
            android:textSize="25sp"
            android:visibility="visible"
            app:cornerRadius="30dp"
            app:iconPadding="5dp"
            app:layout_constraintEnd_toEndOf="@+id/titleApp"
            app:layout_constraintStart_toStartOf="@+id/titleApp"
            app:layout_constraintTop_toBottomOf="@+id/titleApp" />


        <Button
            android:id="@+id/distanceBtn"
            android:layout_width="159dp"
            android:layout_height="53dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_backgroud"
            android:fontFamily="@font/bree_serif"
            android:text="@string/DistanceBtn"
            android:textAllCaps="false"
            android:textColor="#BDBE86"
            android:textSize="25sp"
            android:visibility="visible"
            app:cornerRadius="30dp"
            app:iconPadding="5dp"
            app:layout_constraintEnd_toEndOf="@+id/hBtn"
            app:layout_constraintStart_toStartOf="@+id/hBtn"
            app:layout_constraintTop_toBottomOf="@+id/hBtn" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="215dp"
            android:layout_height="218dp"
            android:layout_marginTop="-120dp"
            android:contentDescription="@string/iconDesc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/titleApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bree_serif"

            android:text="@string/titleMain"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>